extends layout

block content
  .w3-content.w3-padding-32
    .w3-card.w3-white.w3-round
      form.w3-container(method="POST")
        h4.w3-center.w3-text-grey O Meu Eu Digital
        h1 Sign up
        br
        label Username
        input.w3-input.w3-border.w3-round(type="text" name="_id" required)
        br
        label Password
        input.w3-input.w3-border.w3-round(type="text" name="nome" required)
        br
        button.w3-button.w3-medium.w3-cyan.w3-text-black.w3-hover-black.w3-hover-text-white.w3-block(type="submit") Sign up
        hr
        p.w3-center Already have an account? 
            a(href="/login") Log in
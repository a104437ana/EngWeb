doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/w3.css')
    link(rel='icon', type='image/png', href='/images/eu_digital.png')
    meta(charset='utf-8')
  body.w3-light-grey(style="min-height: 100vh; display: flex; flex-direction: column;")
    header
      if role === "admin"
        nav.w3-bar.w3-light-blue.w3-center
          a.w3-bar-item.w3-left.w3-hover-text-white(href="/",, style="text-decoration: none;")
            img(src="/images/eu_digital.png", style="height:70px;" )
            span 
              b O Meu Eu Digital
          h1
          a.w3-bar-item.w3-left.w3-hover-text-white(href="/users",, style="text-decoration: none;")
            img(src="/images/users.png", style="height:50px;" )
            span 
              b Utilizadores
          a.w3-bar-item.w3-left.w3-hover-text-white(href="/recursos",, style="text-decoration: none;")
            img(src="/images/re.png", style="height:50px;" )
            span 
              b Recursos
          a.w3-bar-item.w3-left.w3-hover-text-white(href="/news",, style="text-decoration: none;")
            img(src="/images/news.png", style="height:50px;" )
            span 
              b Notícias
          a.w3-bar-item.w3-left.w3-hover-text-white(href="/stats",, style="text-decoration: none;")
            img(src="/images/stats.png", style="height:50px;" )
            span 
              b Estatísticas
          a.w3-bar-item.w3-right.w3-hover-text-white(href="/login", style="text-decoration: none;")
            img(src="/images/logout.png", style="height:50px;", alt="Sair")
            span 
              b Log out
          a.w3-bar-item.w3-right.w3-hover-text-white(href="/login", style="text-decoration: none;")
            img(src="/images/user.png", style="height:50px;", alt="Sair")
            span 
              b Ana Sá Oliveira
      else if role === "cons"
        nav.w3-bar.w3-light-blue.w3-center
          a.w3-bar-item.w3-left.w3-hover-text-white(href="/",, style="text-decoration: none;")
            img(src="/images/eu_digital.png", style="height:70px;" )
            span 
              b O Meu Eu Digital
          h1
          a.w3-bar-item.w3-left.w3-hover-text-white(href="/diary",, style="text-decoration: none;")
            img(src="/images/diary.png", style="height:50px;" )
            span 
              b  O Meu Diário
          a.w3-bar-item.w3-right.w3-hover-text-white(href="/login", style="text-decoration: none;")
            img(src="/images/logout.png", style="height:50px;", alt="Sair")
            span 
              b Log out
          a.w3-bar-item.w3-right.w3-hover-text-white(href="/login", style="text-decoration: none;")
            img(src="/images/user.png", style="height:50px;", alt="Sair")
            span 
              b Ana Sá Oliveira
      else
        nav.w3-bar.w3-light-blue.w3-center
          a.w3-bar-item.w3-left.w3-hover-text-white(href="/",, style="text-decoration: none;")
            img(src="/images/eu_digital.png", style="height:70px;" )
            span 
              b O Meu Eu Digital
          h1
          a.w3-bar-item.w3-right.w3-hover-text-white(href="/signup", style="text-decoration: none;")
            img(src="/images/signup.png", style="height:50px;", alt="Sair")
            span
              b Sign up
          a.w3-bar-item.w3-right.w3-hover-text-white(href="/login", style="text-decoration: none;")
            img(src="/images/login.png", style="height:50px;", alt="Sair")
            span 
              b Log in

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/w3.css')
    link(rel='icon', type='image/png', href='/images/eu_digital.png')
    meta(charset='utf-8')
  body
    header.w3-bar.w3-light-blue.w3-border-light-blue
      h1
        span.w3-bar-item.w3-left
          a(href='/')
            img(src='/images/eu_digital.png', width='50')
        span.w3-bar-item.w3-left= title
        span.w3-bar-item.w3-right
          a(href='/')
            img(src='/images/logout.png', width='50')

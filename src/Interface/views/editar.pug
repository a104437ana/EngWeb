  //- Template para novos ficheiros
  template#new-file-template
    li.w3-content.w3-card-4.w3-white.w3-round(data-index="__INDEX__")
      input(type="hidden", name="newFiles[__INDEX__][new]", value="true")

      label
        h2.w3-bar-item.w3-left TÃ­tulo:
      input.w3-input.w3-border.w3-round(type="text", name="newFiles[__INDEX__][title]")

      main.w3-container.w3-margin-bottom
        label
          h3.w3-bar-item.w3-left Tags:

        .w3-container
          .tag-container(data-name="newFiles[__INDEX__][tags][]")
          .w3-margin-top
            input.add-tag-input.w3-input.w3-border.w3-round(type="text", placeholder="Nova tag")
            button.add-tag-btn.w3-button.w3-small.w3-green(type="button") +

        label Escolher ficheiro
